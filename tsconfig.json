  "compilerOptions": {
    "outDir": "dist",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "reactNamespace": "window",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": { "@/*": ["*"] }
  }
}
